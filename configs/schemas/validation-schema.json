{
  "title": "DAQ Configuration",
  "type": "object",
  "required": [
    "version",
    "group",
    "components"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "description": "Configuration version",
      "minimum": 9,
      "maximum": 10,
      "default": 10
    },
    "group": {
      "type": "string",
      "default": "faser"
    },
   "scripts": {
      "type": "array",
      "format": "table",
      "title": "Scripts",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "title": "Script",
        "properties": {
          "name": {
            "type": "string"
          },
          "host": {
            "type": "string"
          },
          "executable": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "directory": {
            "type": "string"
          }
        },
        "required": ["name", "host", "executable", "command", "directory"]
      }
    },
    "components": {
      "type": "array",
      "format": "table",
      "title": "Components",
      "uniqueItems": true,
      "items": {
        "type": "object",
	"format":"grid",
        "title": "Component",
	"options": { "disable_collapse": true },
        "properties": {
          "name": {
            "type": "string",
	    "propertyOrder": 1

          },
          "host": {
		"type": "string",
		"format":"host",
		"default": "localhost",
		"propertyOrder": 2
          },          
          "port": {
		"type": "integer",
		"default": 0,
		"minimum": 1024,
	        "maximum": 65535,
		"propertyOrder":3
          },
          "type": {
            "type": "string"
          },
          "loglevel": {
            "type": "object",
            "title": "Log Levels",
	    "format":"grid",
            "propertyOrder": 4,
            "properties": {
              "core": {
                "type": "string",
                "enum": ["DEBUG", "INFO", "WARNING", "TRACE"]
              },
              "module": {
                "type": "string",
                "enum": ["DEBUG", "INFO", "WARNING", "TRACE"]
              }
            },
            "required": ["core", "module"]
          },
          "metrics_settings": {
            "title": "Metrics Settings",
            "propertyOrder": 5,
            "properties": {
		"stats_uri": {
		    "type": "string",
		    "format": "uri"
		},
		"influxDb_uri": {
		    "type"          : "string",
		    "title"         : "influxDb_uri"
		},
		"influxDb_name": {
		    "type"          : "string",
		    "title"         : "influxDb_name"
		}
	    }
          },
          "settings": {
            "type": "object",
            "title": "Settings",
             "propertyOrder": 10
          },
          "connections": {
            "type": "object",
            "title": "Connections",
            "propertyOrder": 100,
            "properties": {
              "receivers": {"oneOf":[{"$ref":"refs/connection-schema.json#/definitions/receivers"}] },
              "senders": { "oneOf":[{"$ref":"refs/connection-schema.json#/definitions/senders"}] }
            }
          }
        },
        "required": ["name", "host", "port", "modules", "loglevel"]
      }
    }
  }
}

