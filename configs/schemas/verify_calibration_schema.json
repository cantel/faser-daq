{
    "type": "object",
    "title": "Calibration",
    "properties": {
        "name": {
            "type": "string",
            "default": "calibration",
            "readOnly": true,
            "pattern": "^((?!XXX).)*$",
            "propertyOrder" : 1
        },
        "type": {
            "type": "string",
            "default": "Calibration",
            "readOnly" : true,
            "propertyOrder" : 2,
            "options" : {"hidden": true}
        },
        "settings": {
            "type": "object",
            "title" : "Settings",
            "description" : "Parameters for tcalib",
            "properties" : {
                "configFile": {
                    "type" : "string",
                    "title" : "tcalib configuration file",
                    "description" : "Location of the module/plane config json file",
                    "default" : "Module0.json"
                },
                "testList": {
                    "type" : "array",
                    "title" : "Test list",
                    "description" : "List of tests to run",
                    "items" : {
                        "type" : "integer",
                        "enum" : [1, 2, 3, 4, 5, 6, 7, 8]
                    },
                    "default" : [2],
                    "uniqueItems": true
                },
                "outBaseDir": {
                    "type" : "string",
                    "title" : "Base output results directory",
                    "default" : "/home/shifter/cernbox/b161"
                },
                "verbose" : {
                    "type" : "integer",
                    "title" : "Verbosity level (from 0 to 3)",
                    "enum" : [0, 1, 2, 3]
                },
                "noRunNumber" : {
                    "type" : "boolean",
                    "title" : "Disable automatic creation of run-number to be stored in DB",
                    "default" : false
                },
                "usb" : {
                    "type" : "boolean",
                    "title" : "Use TRB connected via USB",
                    "default" : false
                }
            },
            "required" : ["configFile", "testList"],
            "format":"grid",
            "propertyOrder": 3
        }
    },
    "required": ["name", "type"]
}