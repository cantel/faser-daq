{
    "type": "object",
    "title": "Component",
    "properties": {
      "name": {
        "type": "string",
	"required": true,
	"default": "TriggerGeneratorXXX",
	"pattern": "^((?!XXX).)*$"
      },
      "host": {
        "type": "string",
	"required": true,
	"default": "localhost",
	"format": "hostname",
      },          
      "port": {
        "type": "integer",
	"required": true,
	"default": 0,
        "minimum": 1024,
	"maximum": 65535,
      },
      "type": {
        "type": "string",
	"default": "triggergenerator",
	"readOnly": true
      },
      "settings": {
        "type": "object",
        "title": "Settings",
        "properties": {
          "stats_uri": {
	    "type": "string",
	    "format": "uri",
	  },
	  "rateInHz": {
	    "type": "integer",
	    "default": 0,
	    "minimum": 1,
	    "maximum": 5000,
	    "required": true,
	    "description": "Rate of triggers to generate",
	  },
	  "frontendApps": {
	    "type": "array",
	    "description": "Applications that should receive triggers",
            "format": "table",
            "title": "Receivers",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties": {
                "host": {
                  "type":"string",
		  "required": true,
		  "default": "localhost",
		  "format": "hostname",
                },
                "port": {
		  "type":"integer",
		  "required": true,
		  "default": 0,
        	  "minimum": 1024,
		  "maximum": 65535,
		}
              },
            }
          }
	}
      },
      "connections": {
        "type": "object",
        "title": "Connections",
        "properties": {
          "receivers": { 
            "type": "array", 
            "format": "table",
            "title": "Receivers",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["pair", "pubsub"]
                },
                "chid": {"type":"integer"},
                "host": {"type":"string"},
                "port": {"type":"integer"}
              },
              "required": ["type", "chid", "host", "port"]
            }
          },
          "senders": { 
            "type": "array", 
            "format": "table",
            "title": "Senders",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type":"string",
                  "enum": ["pair", "pubsub"]
                },
                "chid": {"type":"integer"},
                "host": {"type":"string"},
                "port": {"type":"integer"}
              },
              "required": ["type", "chid", "host", "port"]
            }
          }
        }
      }
    },
    "required": ["name", "host", "port", "type"]
}


