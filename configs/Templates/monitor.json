{
    "EventMonitor": {
	"name": "eventmonitor01",
	"host": "localhost",
	"port": 5505,
	"modules":[{
		"name": "eventmonitor01",
		"type": "EventMonitor",
		"settings": {
            "fragmentID": 262144,
            "publish_interval": 30,
            "enable_digitizer": true,
            "enable_tlb": true,
            "enable_trb": [0,1,2]
		},
		"connections": {
				"receivers": [
				{
					"type": "ZMQPubSub",
					"chid": 0,
					"connections":[{"transport": "tcp", "host": "localhost", "port": 8200}],
					"queue":{"$ref":"top.json#queue"}
				}
				]
		}
	}],
	"loglevel":         { "$ref": "top.json#loglevel" },
	"metrics_settings": { "$ref": "top.json#metrics_settings" }
    }
}
